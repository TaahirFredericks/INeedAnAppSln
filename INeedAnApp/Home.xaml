<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INeedAnApp.Home"
             BackgroundColor="Grey"
             Title="Home">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Margin="30"
                Source="laking"
                WidthRequest="500"
                HeightRequest="450"
                Aspect="AspectFit"/>

            <Label
                Text="SHIRTS!"
                TextColor="White"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="Medium"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>